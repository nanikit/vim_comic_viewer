{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "deno",
      "command": "run",
      "args": [
        "--allow-all",
        "--import-map",
        "import_map.json",
        "bin/build.ts"
      ],
      "group": "none",
      "problemMatcher": "$deno"
    },
    {
      "label": "watch",
      "type": "deno",
      "command": "run",
      "args": [
        "--allow-all",
        "--watch=src/mod.tsx",
        "--import-map",
        "import_map.json",
        "bin/build.ts"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$deno"
    }
  ]
}
